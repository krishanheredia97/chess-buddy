{
  "manifest_version": 3,
  "name": "Chess Time Control Blocker",
  "version": "1.0.0",
  "description": "Blocks specific time control buttons on Chess.com to prevent blitz addiction",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chess Time Control Blocker"
  },
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "host_permissions": [
    "https://*.chess.com/*",
    "http://*.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.chess.com/*", "http://*.chess.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
